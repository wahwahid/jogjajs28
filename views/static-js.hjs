<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>JogjaJS28</title>

  <link rel="stylesheet" href="https://taniarascia.github.io/primitive/css/main.css">
  <link rel="icon" href="images/favicon.png">
</head>

<body>
  <div class="medium-container">
    <div class="flex-row">
      <div class="flex-large">
        <h1>Realtime Counter with JS</h1>
        <p>This site has visited counter that updating data in <span id="ticker"></span> seconds...</p>
        <hr>
      </div>
    </div>
    <div class="flex-row">
      <div class="flex-small">
        <h1>{{ counter }}</h1>
        <p>Page Visit</p>
      </div>
    </div>
  </div>
  <script>
    var interval = 5
    setInterval(function() {
      location.reload()
    }, interval * 1000)

    var ticker = interval
    var tickerElem = document.getElementById("ticker")
    tickerElem.innerText = ticker
    setInterval(function() {
      if (ticker == 0) {
        ticker = interval
      } else {
        ticker--
      }
      tickerElem.innerText = ticker
    }, 1000)
  </script>
</body>

</html>